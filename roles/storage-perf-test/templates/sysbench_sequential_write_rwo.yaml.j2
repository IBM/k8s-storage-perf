{% import 'commonhelper.macros.j2' as cm with context %}
apiVersion: batch/v1
kind: Job
metadata:
  name: sysbench-sequential-write-rwo
  namespace: "{{ storage_perf_namespace }}"
spec:
  template:
    metadata:
      name: sysbench-sequential-write-rwo
    spec:
      {{ cm.nodeAffinity() | indent(6) }}
      containers:
      - name: sysbench-sequential-write-rwo
        image: {{ imageurl }}-{{ arch }}
        command: ["python3"]
        args:
          - '/tmp/sysbench.py'
          - '{{ swrite_threads }}'
          - '{{ swrite_fileTotalSize }}'
          - '{{ swrite_fileNum }}'
          - 'seqwr'
          - '{{ swrite_fileBlockSize }}'
          - '{{ swrite_ioMode | default(ioMode | default("sync")) }}'
          - '{{ swrite_fsyncFreq | default(fsyncFreq | default(0)) }}'
          - '{{ swrite_extraFlags | default(extraFlags | default("none")) }}'
          - '{{ cluster_infrastructure }}'
          - '{{ cluster_name }}'
          - '{{ storage_type }}'
          - 'pvc-sysbench-rwo'
          - '{{ swrite_runTime | default(runTime | default(120)) }}'
        volumeMounts:
        - name: tmp-store
          mountPath: /tmp/data
      volumes:
      - name: tmp-store
        persistentVolumeClaim:
          claimName: pvc-sysbench-rwo
          readOnly: false
      restartPolicy: Never
