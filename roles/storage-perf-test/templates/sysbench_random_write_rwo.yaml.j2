{% import 'commonhelper.macros.j2' as cm with context %}
apiVersion: batch/v1
kind: Job
metadata:
  name: sysbench-random-write-rwo
  namespace: "{{ storage_perf_namespace }}"
spec:
  template:
    metadata:
      name: sysbench-random-write-rwo
    spec:
      {{ cm.nodeAffinity() | indent(6) }}
      containers:
      - name: sysbench-random-write-rwo
        image: {{ imageurl }}-{{ arch }}
        command: ["python3"]
        args:
          - '/tmp/sysbench.py'
          - '{{ rwrite_threads }}'
          - '{{ rwrite_fileTotalSize }}'
          - '{{ rwrite_fileNum }}'
          - 'rndwr'
          - '{{ rwrite_fileBlockSize }}'
          - '{{ ioMode }}'
          - '{{ fsyncFreq }}'
          - '{{ extraFlags }}'
          - '{{ cluster_infrastructure }}'
          - '{{ cluster_name }}'
          - '{{ storage_type }}'
          - 'pvc-sysbench-rwo'
          - '{{ runTime }}'
        volumeMounts:
        - name: tmp-store
          mountPath: /tmp/data
      volumes:
      - name: tmp-store
        persistentVolumeClaim:
          claimName: pvc-sysbench-rwo
          readOnly: false
      restartPolicy: Never
